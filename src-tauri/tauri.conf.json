{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ollama Chat",
  "version": "0.1.0",
  "identifier": "com.murad.ollama-chat",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ollama Chat",
        "width": 1000,
        "height": 700,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://localhost:11434; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
